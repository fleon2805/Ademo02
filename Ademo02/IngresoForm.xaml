<Window x:Class="Ademo02.IngresoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ademo02"
        mc:Ignorable="d"
        Title="IngresoForm" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Tipo Documento"/>
            <TextBox Margin="0,5,0,10"/>

            <TextBlock Text="Número Documento"/>
            <TextBox Margin="0,5,0,10"/>

            <TextBlock Text="Placa"/>
            <TextBox Margin="0,5,0,10"/>

            <TextBlock Text="Turno"/>
            <TextBox Margin="0,5,0,10"/>

            <TextBlock Text="Nombre Conductor"/>
            <TextBox Margin="0,5,0,10"/>

            <TextBlock Text="Nombre Cliente"/>
            <TextBox Margin="0,5,0,10"/>

            <TextBlock Text="Fecha y Hora"/>
            <TextBox Margin="0,5,0,10"/>

            <TextBlock Text="Peso de Ingreso"/>
            <TextBox Margin="0,5,0,10"/>
            <Button Content="Grabar" Width="100" Height="30"
                    Click="BtnGrabar_Click" RenderTransformOrigin="0.53,-0.354"/>
        </StackPanel>
    </ScrollViewer>
</Window>
