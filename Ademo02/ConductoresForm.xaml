<Window x:Class="Ademo02.ConductoresForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ademo02"
        mc:Ignorable="d"
        Title="ConductoresForm" Height="450" Width="800">
    <StackPanel Margin="20">

        
        <TextBlock Text="Nombre Conductor"/>
        <TextBox x:Name="txtNombre" Margin="0,5,0,10"/>

        <TextBlock Text="Licencia"/>
        <TextBox x:Name="txtLicencia" Margin="0,5,0,10"/>

        <TextBlock Text="Transporte"/>
        <TextBox x:Name="txtTransporte" Margin="0,5,0,10"/>

        
        <Button Content="Grabar" Width="100" Height="30" 
                HorizontalAlignment="Center" Margin="0,20,0,20"
                Click="BtnGrabar_Click"/>

        
        <TextBlock Text="Datos registrados:" FontWeight="Bold" Visibility="Collapsed" x:Name="lblTitulo"/>
        <TextBlock x:Name="lblDatos" TextWrapping="Wrap" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
