<Window x:Class="Ademo02.ListadoIngresosRep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ademo02"
        mc:Ignorable="d"
        Title="ListadoIngresosRep" Height="450" Width="800">
    <DockPanel Margin="10">

        
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top" HorizontalAlignment="Center">
            <StackPanel Margin="10,0">
                <TextBlock Text="Fecha Inicio"/>
                <DatePicker x:Name="dpFechaInicio"/>
            </StackPanel>

            <StackPanel Margin="10,0">
                <TextBlock Text="Fecha Fin"/>
                <DatePicker x:Name="dpFechaFin"/>
            </StackPanel>

            <StackPanel Margin="10,0">
                <TextBlock Text="Placa"/>
                <TextBox x:Name="txtPlaca" Width="120"/>
            </StackPanel>

            <StackPanel Margin="10,0">
                <TextBlock Text="Conductor"/>
                <TextBox x:Name="txtConductor" Width="150"/>
            </StackPanel>

            <StackPanel Margin="10,0">
                <TextBlock Text="Producto"/>
                <TextBox x:Name="txtProducto" Width="150"/>
            </StackPanel>

            <Button Content="Buscar" Width="80" Height="30" Margin="10,20,0,0" Click="BtnBuscar_Click"/>
        </StackPanel>

        
        <DataGrid x:Name="dgIngresos" AutoGenerateColumns="False" CanUserAddRows="False" DockPanel.Dock="Bottom">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="100"/>
                <DataGridTextColumn Header="Placa" Binding="{Binding Placa}" Width="100"/>
                <DataGridTextColumn Header="Turno" Binding="{Binding Turno}" Width="80"/>
                <DataGridTextColumn Header="Conductor" Binding="{Binding Conductor}" Width="150"/>
                <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="150"/>
                <DataGridTextColumn Header="Peso" Binding="{Binding Peso}" Width="80"/>
                <DataGridTextColumn Header="Transporte" Binding="{Binding Transporte}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
